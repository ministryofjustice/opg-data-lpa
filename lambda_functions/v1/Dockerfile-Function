FROM public.ecr.aws/lambda/python:3.13@sha256:bba0fd78df153421fa63317fa29df68b2a7552aa3e88f2ed4552a060d39cdc56 AS build

WORKDIR /app

COPY lambda_functions/v1/requirements/requirements.txt requirements.txt

RUN pip install -r requirements.txt -t python/

COPY lambda_functions/v1/functions/lpa/ python/

FROM public.ecr.aws/lambda/python:3.13@sha256:bba0fd78df153421fa63317fa29df68b2a7552aa3e88f2ed4552a060d39cdc56 AS runtime

WORKDIR /var/task

COPY --from=build /app/python ./

RUN rm -f /usr/local/bin/aws-lambda-rie

CMD [ "app.lpa.lambda_handler" ]
