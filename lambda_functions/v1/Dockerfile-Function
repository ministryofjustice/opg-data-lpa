FROM public.ecr.aws/lambda/python:3.13@sha256:eb21bee578aea57bc89d7681de0cc3deda5426499ae195615cc247738d39d6f6 AS build

WORKDIR /app

COPY lambda_functions/v1/requirements/requirements.txt requirements.txt

RUN pip install -r requirements.txt -t python/

COPY lambda_functions/v1/functions/lpa/ python/

FROM public.ecr.aws/lambda/python:3.13@sha256:eb21bee578aea57bc89d7681de0cc3deda5426499ae195615cc247738d39d6f6 AS runtime

WORKDIR /var/task

COPY --from=build /app/python ./

RUN rm -f /usr/local/bin/aws-lambda-rie

CMD [ "app.lpa.lambda_handler" ]
