FROM public.ecr.aws/lambda/python:3.13@sha256:c5655ac86b53647713a7cf7693e064a4143c2c66e6c6dae67b0f967d2039bd52 AS build

WORKDIR /app

COPY lambda_functions/v1/requirements/requirements.txt requirements.txt

RUN pip install -r requirements.txt -t python/

COPY lambda_functions/v1/functions/lpa/ python/

FROM public.ecr.aws/lambda/python:3.13@sha256:c5655ac86b53647713a7cf7693e064a4143c2c66e6c6dae67b0f967d2039bd52 AS runtime

WORKDIR /var/task

COPY --from=build /app/python ./

RUN rm -f /usr/local/bin/aws-lambda-rie

CMD [ "app.lpa.lambda_handler" ]
