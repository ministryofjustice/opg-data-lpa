FROM public.ecr.aws/lambda/python:3.13@sha256:25b455d597889e9552ea04437f83f53fb96df40732636ddaddda80e8710cb384 AS build

WORKDIR /app

COPY lambda_functions/v1/requirements/requirements.txt requirements.txt

RUN pip install -r requirements.txt -t python/

COPY lambda_functions/v1/functions/lpa/ python/

FROM public.ecr.aws/lambda/python:3.13@sha256:25b455d597889e9552ea04437f83f53fb96df40732636ddaddda80e8710cb384 AS runtime

WORKDIR /var/task

COPY --from=build /app/python ./

RUN rm -f /usr/local/bin/aws-lambda-rie

CMD [ "app.lpa.lambda_handler" ]
