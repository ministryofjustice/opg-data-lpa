FROM public.ecr.aws/lambda/python:3.13@sha256:0ab8146b9166e4cf74c16ad998f6db0e8bf276de659fb36f5fabef16ee7c2fa1 AS build

WORKDIR /app

COPY lambda_functions/v1/requirements/requirements.txt requirements.txt

RUN pip install -r requirements.txt -t python/

COPY lambda_functions/v1/functions/lpa/ python/

FROM public.ecr.aws/lambda/python:3.13@sha256:0ab8146b9166e4cf74c16ad998f6db0e8bf276de659fb36f5fabef16ee7c2fa1 AS runtime

WORKDIR /var/task

COPY --from=build /app/python ./

RUN rm -f /usr/local/bin/aws-lambda-rie

CMD [ "app.lpa.lambda_handler" ]
