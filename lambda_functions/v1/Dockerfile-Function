FROM public.ecr.aws/lambda/python:3.13.2025.09.02.21@sha256:7a4dea91497f6551b88778be4c73ca2035db509a4aa4068c6317376308a7a6b2 AS build

WORKDIR /app

COPY lambda_functions/v1/requirements/requirements.txt requirements.txt

RUN pip install -r requirements.txt -t python/

COPY lambda_functions/v1/functions/lpa/ python/

RUN echo "2023.7.20250512" > /etc/dnf/vars/releasever && \
    dnf clean all && \
    dnf -y update sqlite-libs libxml2 && \
    dnf clean all

FROM public.ecr.aws/lambda/python:3.13.2025.09.02.21@sha256:7a4dea91497f6551b88778be4c73ca2035db509a4aa4068c6317376308a7a6b2 AS runtime

WORKDIR /var/task

COPY --from=build /app/python ./

RUN rm -f /usr/local/bin/aws-lambda-rie

CMD [ "app.lpa.lambda_handler" ]