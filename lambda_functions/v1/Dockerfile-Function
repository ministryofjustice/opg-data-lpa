FROM public.ecr.aws/lambda/python:3.13@sha256:47b6c63b5a03a6748ee0a98335977a2fef17c07915fabe88547e1b925cda5433 AS build

WORKDIR /app

COPY lambda_functions/v1/requirements/requirements.txt requirements.txt

RUN pip install -r requirements.txt -t python/

COPY lambda_functions/v1/functions/lpa/ python/

FROM public.ecr.aws/lambda/python:3.13@sha256:47b6c63b5a03a6748ee0a98335977a2fef17c07915fabe88547e1b925cda5433 AS runtime

WORKDIR /var/task

COPY --from=build /app/python ./

RUN rm -f /usr/local/bin/aws-lambda-rie

CMD [ "app.lpa.lambda_handler" ]
